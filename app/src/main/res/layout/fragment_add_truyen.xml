<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.AddBookFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_addbook"
        android:background="@color/orange"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:title="Thêm truyện"
        app:titleTextColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên truyện"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả truyện"
            android:inputType="textMultiLine"
            android:lines="4" />

        <EditText
            android:id="@+id/edtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tác giả"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Năm xuất bản"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtImgCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link ảnh bìa"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtImgContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link ảnh nội dung"
            android:inputType="text" />

        <Button
            android:id="@+id/btnAddSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Thêm" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>